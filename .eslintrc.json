{
    "root": true,
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "rules": {
        "comma-dangle": "error",
        "quotes": [
            "error",
            "single"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "space-before-function-paren": "error"
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "ecmaVersion": 2019
    }
}